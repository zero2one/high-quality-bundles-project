{% extends "::base.html.twig" %}

{% block body %}
    <h1>{{ patient.personalInformation.name }}</h1>
    <table class="table">
        <tr>
            <th>Firstname</th>
            <td>{{ patient.personalInformation.name.firstName }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ patient.personalInformation.name.lastName }}</td>
        </tr>
        <tr>
            <th>Sex</th>
            <td>{{ patient.personalInformation.sex.sex }}</td>
        </tr>
        <tr>
            <th>Date of birth</th>
            <td>{{ patient.personalInformation.dateOfBirth.date|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <th>Has arrived yet?</th>
            <td>{{ patient.hasArrived ? 'yes' : 'no' }}</td>
        </tr>
        <tr>
            <th>Indication</th>
            <td>{{ patient.indication }}</td>
        </tr>
    </table>
{% endblock %}
